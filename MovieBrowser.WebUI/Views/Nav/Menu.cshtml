@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Movie", null, new { @class = "btn btn-primary" })

@if (Model.Any())
{
    <div class="btn-group-vertical menu">
        @foreach (var link in Model)
        {
            @Html.RouteLink(@link, new
            {
                    controller = "Movie",
                    action = "List",
                    range = link,
                    page = 1
                },
                new
                {
                    @class = link == ViewBag.SelectedRange ? "selected btn btn-primary nav-button" : "btn btn-primary nav-button"
            })
        }
    </div>
}

@Html.ActionLink("Scan for Files", "Scan", "Scan", null, new { @class = "btn btn-primary" })
@if (Model.Any())
{
    @Html.ActionLink("Clear Database", "Clear", "Scan", null, new { @class = "btn btn-primary" })
}
